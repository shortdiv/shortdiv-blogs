{
  "mount": {
    "src/_site": { "url": "/", "static": true, "resolve": false },
    "src/css": { "url": "/css" }
  },
  "plugins": [
    "@snowpack/plugin-dotenv",
    "@snowpack/plugin-postcss",
    [
      "@snowpack/plugin-run-script",
      {
        "cmd": "eleventy && postcss src/styles/**/[^_]*.css --dir src/css --ext css",
        "watch": "$1 --watch"
      }
    ],
    ["snowpack-plugin-terser",
      {
        "terserOptions": {
          "compress": {
            "arguments": true,
            "passes": 2,
            "unsafe_arrows": true
          }
        }
      }
    ]
  ],
  "devOptions": {
    "port": 8080,
    "open": "none",
    "bundle": true,
    "hmr": true,
    "out": "dist"
  }
}
